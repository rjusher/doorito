# Django Configuration
# Copy this file to .env and update the values

# Configuration class to use: Dev, Production
DJANGO_CONFIGURATION=Dev

# Secret key for Django (required in production)
# Generate one with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (set to False in production)
DJANGO_DEBUG=True

# Allowed hosts (comma-separated list)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database URL
# PostgreSQL: postgres://user:password@host:port/dbname
DATABASE_URL=postgres://doorito:doorito@localhost:5432/doorito

# PostgreSQL settings (used by docker-compose)
POSTGRES_USER=doorito
POSTGRES_PASSWORD=doorito
POSTGRES_DB=doorito

# Server port
# WEB_PORT=8000

# Internationalization
DJANGO_LANGUAGE_CODE=en-us
DJANGO_TIME_ZONE=UTC

# Static and Media files
DJANGO_STATIC_URL=static/
DJANGO_MEDIA_URL=media/

# Email Configuration
# For development, emails are printed to console
# For production, configure SMTP or a transactional email service
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# Site URL (used for building absolute URLs in emails)
SITE_URL=http://localhost:8000

# Celery / Background Tasks
# Postgres broker via SQLAlchemy transport (not needed in dev when CELERY_TASK_ALWAYS_EAGER=True)
CELERY_BROKER_URL=sqla+postgresql://doorito:doorito@localhost:5432/doorito
# Result backend (default: django-db)
CELERY_RESULT_BACKEND=django-db
# Run tasks synchronously in dev (default: True in Dev, False in Production)
CELERY_TASK_ALWAYS_EAGER=True
